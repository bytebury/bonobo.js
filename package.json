{
	"name": "@bytebury/bonobo",
	"version": "0.1.4",
	"description": "A civilized and peaceful utility library for TypeScript and ECMAScript",
	"main": "core/index.js",
	"type": "module",
	"exports": {
		".": {
			"import": "./core/index.js",
			"types": "./core/index.d.ts"
		},
		"./strings": {
			"import": "./strings/index.js",
			"types": "./strings/index.d.ts"
		},
		"./dates": {
			"import": "./dates/index.js",
			"types": "./dates/index.d.ts"
		},
		"./types": {
			"import": "./types/index.js",
			"types": "./types/index.d.ts"
		},
		"./bytes": {
			"import": "./bytes/index.js",
			"types": "./bytes/index.d.ts"
		},
		"./numbers": {
			"import": "./numbers/index.js",
			"types": "./numbers/index.d.ts"
		}
	},
	"scripts": {
		"test": "vitest --coverage",
		"build": "rm -rf ./dist && tsc",
		"release": "cp package.json README.md LICENSE dist/ && cd dist/ && npm publish",
		"docs": "typedoc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bytebury/bonobo.js.git"
	},
	"author": "Marcello <bytebury@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bytebury/bonobo.js/issues"
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/bytebury/bonobo.js#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@vitest/coverage-v8": "^3.2.4",
		"typedoc": "^0.28.9",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}

