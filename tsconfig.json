{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["ESNext", "DOM"],
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": false,
		"rootDir": "src",
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "src/**/*.test.ts"]
}

